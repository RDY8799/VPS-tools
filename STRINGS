# PROGRESS BAR
RDYSPINNER()
{
    local pid=$!
    local delay=0.50
    local spinstr='|/-\'
	tput civis -- invisible
    while [ "$(ps a | awk '{print $1}' | grep $pid)" ]; do
        local temp=${spinstr#?}
        printf " ${yellow}[${mag}%c${red}]$f  " "$spinstr"
        local spinstr=$temp${spinstr%"$temp"}
        sleep $delay
        printf "\b\b\b\b\b\b"
    done
    printf "    \b\b\b\b"
	tput cnorm -- normal
}